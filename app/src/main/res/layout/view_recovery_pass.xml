<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:columnCount="3"
        android:rotation="0">

        <ImageView
            android:id="@+id/imageview_back_recovery_pass"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_back"
            android:tint="@color/colorWhite"
            android:padding="13dp"
            android:layout_column="0"
            android:layout_row="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_gravity="fill_horizontal|center"
            android:textColor="@color/colorWhite"
            android:text="@string/title_recovery_pass"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:fontFamily="@font/roboto"/>

        <ImageView
            android:visibility="invisible"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_back"
            android:padding="12dp"
            android:layout_column="2"
            android:layout_row="0"/>

    </GridLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_info_recovery_pass"
            android:textSize="16dp"
            android:textColor="@color/colorWhite"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_email_recovery_pass"
            android:textSize="16dp"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/roboto"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/edit_text_email_recovery_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/input_view_login"
            android:elevation="1dp"
            android:textColor="@color/colorPrimary"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/colorGray"
            android:padding="10dp"
            android:layout_marginBottom="16dp"/>


        <Button
            android:id="@+id/button_recovery_pass"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_recovery_pass"
            android:textAllCaps="false"
            android:background="@drawable/ripple_login"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/roboto"/>

    </LinearLayout>

</LinearLayout>