<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFundo">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="1dp"
        android:background="@color/colorWhite"
        android:columnCount="3"
        android:rotation="0">

        <ImageView
            android:id="@+id/imageview_back_login"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_back"
            android:padding="13dp"
            android:layout_column="0"
            android:layout_row="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_gravity="fill_horizontal|center"
            android:text="@string/title_view_login"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:fontFamily="@font/roboto"/>

        <ImageView
            android:visibility="invisible"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_back"
            android:padding="12dp"
            android:layout_column="2"
            android:layout_row="0"/>

    </GridLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:background="@drawable/input_view_login"
            android:layout_marginBottom="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mail_outline"
                android:layout_gravity="center"
                android:tint="@color/colorGray"/>

            <EditText
                android:id="@+id/edit_text_email_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:hint="@string/hint_email_login"
                android:textColor="@color/colorPrimary"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/colorGray"
                android:paddingHorizontal="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:background="@drawable/input_view_login"
            android:layout_marginBottom="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pass_key"
                android:layout_gravity="center"
                android:tint="@color/colorGray"/>

            <EditText
                android:id="@+id/edit_text_pass_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:hint="@string/hint_pass_login"
                android:textColor="@color/colorPrimary"
                android:inputType="textPassword"
                android:textColorHint="@color/colorGray"
                android:paddingHorizontal="10dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/button_login"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_login"
            android:textAllCaps="true"
            android:background="@drawable/buttons_intro_view"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/roboto"/>

        <TextView
            android:id="@+id/textview_recovery_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginVertical="24dp"
            android:paddingVertical="10dp"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:text="@string/forget_pass_login"/>

    </LinearLayout>

</LinearLayout>