<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/actionbar_validation_sms"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <TextView
        android:id="@+id/info_validation_sms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:paddingVertical="16dp"
        android:paddingHorizontal="24dp"
        android:gravity="center"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_cellphone_sms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="16dp">

        <EditText
            android:id="@+id/code_sms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CÃ³digo"
            android:textSize="25dp"
            android:fontFamily="@font/roboto"
            android:inputType="number"
            android:maxLength="6"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/button_verifica_sms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_blue"
        android:textColor="@color/colorWhite"
        android:text="Validar"
        android:fontFamily="@font/roboto"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"/>

    <TextView
        android:id="@+id/count_time_sms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16dp"
        android:padding="10dp"/>




</LinearLayout>