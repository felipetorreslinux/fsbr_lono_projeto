<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="NewApi">

    <style name="Splash" parent="android:Theme.DeviceDefault.NoActionBar.Fullscreen">
        <item name="android:background">@drawable/splash_background</item>
    </style>

    <style name="View_Intro" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/colorPrimary</item>
    </style>

    <style name="AppTheme" parent="android:Theme.DeviceDefault.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorBlack</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/colorPrimaryDark</item>
    </style>

    <style name="NewAccountPF" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/colorPrimaryDark</item>
    </style>

    <style name="Contact" parent="@style/Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Chat" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/colorPrimaryDark</item>
        <item name="actionOverflowButtonStyle">@style/DotsDarkTheme</item>
    </style>

    <style name="DotsDarkTheme" parent="@style/Widget.AppCompat.ActionButton.Overflow" >
        <item name="android:tint">@color/colorWhite</item>
    </style>

    <style name="NewCreditCard" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/colorPrimaryDark</item>
    </style>

</resources>
